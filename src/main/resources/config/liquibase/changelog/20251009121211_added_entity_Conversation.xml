<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added the entity Conversation.
    -->
    <changeSet id="20251009121211-1" author="jhipster">
        <createTable tableName="conversation">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="order_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="conversation" columnName="created_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

  <changeSet id="20251009121211-2" author="mihairusu">
    <addColumn tableName="conversation">
      <column name="participant_a_id" type="bigint">
        <constraints nullable="false"/>
      </column>
    </addColumn>
    <addColumn tableName="conversation">
      <column name="participant_b_id" type="bigint">
        <constraints nullable="false"/>
      </column>
    </addColumn>

    <addForeignKeyConstraint baseTableName="conversation"
                             baseColumnNames="participant_a_id"
                             constraintName="fk_conversation__participant_a_id"
                             referencedTableName="profile"
                             referencedColumnNames="id"/>

    <addForeignKeyConstraint baseTableName="conversation"
                             baseColumnNames="participant_b_id"
                             constraintName="fk_conversation__participant_b_id"
                             referencedTableName="profile"
                             referencedColumnNames="id"/>
  </changeSet>

</databaseChangeLog>
