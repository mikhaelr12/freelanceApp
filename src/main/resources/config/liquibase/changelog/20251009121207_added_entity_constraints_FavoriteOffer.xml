<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity FavoriteOffer.
    -->
    <changeSet id="20251009121207-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="profile_id"
                                 baseTableName="favorite_offer"
                                 constraintName="fk_favorite_offer__profile_id"
                                 referencedColumnNames="id"
                                 referencedTableName="profile"
                                 />

        <addForeignKeyConstraint baseColumnNames="offer_id"
                                 baseTableName="favorite_offer"
                                 constraintName="fk_favorite_offer__offer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="offer"
                                 />
    </changeSet>
  <changeSet id="20251009121207-3" author="mihai.rusu">
    <dropForeignKeyConstraint baseTableName="favorite_offer"
                              constraintName="fk_favorite_offer__offer_id"/>
    <dropForeignKeyConstraint baseTableName="favorite_offer"
                              constraintName="fk_favorite_offer__profile_id"/>

    <addForeignKeyConstraint baseColumnNames="profile_id"
                             baseTableName="favorite_offer"
                             constraintName="fk_favorite_offer__profile_id"
                             referencedColumnNames="id"
                             referencedTableName="profile"
                             onDelete="CASCADE"
    />

    <addForeignKeyConstraint baseColumnNames="offer_id"
                             baseTableName="favorite_offer"
                             constraintName="fk_favorite_offer__offer_id"
                             referencedColumnNames="id"
                             referencedTableName="offer"
                             onDelete="CASCADE"
    />
  </changeSet>
</databaseChangeLog>
