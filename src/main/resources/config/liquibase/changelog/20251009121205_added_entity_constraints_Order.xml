<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Order.
    -->
    <changeSet id="20251009121205-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="buyer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__buyer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="seller_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__seller_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="offerpackage_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__offerpackage_id"
                                 referencedColumnNames="id"
                                 referencedTableName="offer_package"
                                 />
    </changeSet>

  <changeSet id="20251009121205-3" author="mihairusu">
    <dropForeignKeyConstraint baseTableName="jhi_order"
                              constraintName="fk_jhi_order__buyer_id"/>

    <dropForeignKeyConstraint baseTableName="jhi_order"
                              constraintName="fk_jhi_order__seller_id"/>

    <addForeignKeyConstraint baseTableName="jhi_order"
                             baseColumnNames="buyer_id"
                             constraintName="fk_jhi_order__buyer_id"
                             referencedColumnNames="id"
                             referencedTableName="profile"/>

    <addForeignKeyConstraint baseTableName="jhi_order"
                             baseColumnNames="seller_id"
                             constraintName="fk_jhi_order__seller_id"
                             referencedColumnNames="id"
                             referencedTableName="profile"/>
  </changeSet>
</databaseChangeLog>
