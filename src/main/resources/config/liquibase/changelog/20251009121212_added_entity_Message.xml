<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added the entity Message.
    -->
    <changeSet id="20251009121212-1" author="jhipster">
        <createTable tableName="message">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="body" type="varchar(4096)">
                <constraints nullable="false" />
            </column>
            <column name="sent_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="conversation_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="sender_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="message" columnName="sent_at" columnDataType="${datetimeType}"/>
    </changeSet>

  <changeSet id="20251009121212-2" author="mihai.rusu">
    <addColumn tableName="message">
      <column name="receiver_id" type="bigint"/>
    </addColumn>
    <addForeignKeyConstraint baseColumnNames="receiver_id"
                             baseTableName="message"
                             constraintName="fk_message__receiver_id"
                             referencedColumnNames="id"
                             referencedTableName="profile"/>
  </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

</databaseChangeLog>
