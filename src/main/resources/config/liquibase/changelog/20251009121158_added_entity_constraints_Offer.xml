    <!--
        Added the constraints for entity Offer.
    -->
    <changeSet id="20251009121158-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="offer"
                                 constraintName="fk_offer__owner_id"
                                 referencedColumnNames="id"
