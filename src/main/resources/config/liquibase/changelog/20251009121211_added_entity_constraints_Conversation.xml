<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Conversation.
    -->
    <changeSet id="20251009121211-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="conversation"
                                 constraintName="fk_conversation__order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_order"
                                 />
    </changeSet>

  <changeSet id="20251009121211-3" author="mihairusu">
    <dropForeignKeyConstraint baseTableName="conversation"
                              constraintName="fk_conversation__order_id"/>

  </changeSet>

  <changeSet id="20251009121211-4" author="mihairusu">
    <dropColumn tableName="conversation"
                columnName="order_id"/>
  </changeSet>

</databaseChangeLog>
